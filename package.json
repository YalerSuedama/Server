{
    "name": "amadeusrelayserver",
    "version": "0.1.0",
    "description": "Amadeus Relay Server",
    "main": "index.ts",
    "scripts": {
        "clean": "rimraf dist",
        "clean:ethereum": "rimraf ./testrpc/database",
        "swagger:swagger": "tsoa swagger",
        "swagger:routes": "tsoa routes",
        "swagger:all": "npm run swagger:swagger && npm run swagger:routes",
        "build": "npm run clean && npm run swagger:all && webpack --config webpack.dev.config.js",
        "build:ethereum": "npm run clean:ethereum && copy ./testrpc/original/* ./testrpc/database",
        "start": "npm run build && node dist/server.js",
        "start:dev": "npm run build && DEBUG=* webpack --watch --config webpack.dev.config.js",
        "start:ethereum": "testrpc --networkId 50 -p 8545 --db ./testrpc/database -m 'concert load couple harbor equip island argue ramp clarify fence smart topic'",
        "start:reset-ethereum": "npm run build:ethereum && npm run start:ethereum",
        "test": "DEBUG=amadeusrelay:* mocha --opts \"./mocha.opts\"",
        "test:coverage": "DEBUG=amadeusrelay:* nyc --require ts-node/register --require source-map-support/register mocha \"**/*.test.ts\""
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/AmadeusRelay/AmadeusRelayServer.git"
    },
    "author": "AmadeusRelay",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/AmadeusRelay/AmadeusRelayServer/issues"
    },
    "homepage": "https://github.com/AmadeusRelay/AmadeusRelayServer#readme",
    "devDependencies": {
        "@types/bignumber.js": "^4.0.3",
        "@types/body-parser": "^1.16.5",
        "@types/chai": "^4.0.4",
        "@types/config": "0.0.33",
        "@types/cors": "^2.8.1",
        "@types/debug": "0.0.30",
        "@types/express": "^4.0.37",
        "@types/lodash": "^4.14.78",
        "@types/mocha": "^2.2.43",
        "@types/node": "^8.0.46",
        "@types/sinon": "^2.3.7",
        "@types/sinon-chai": "^2.7.29",
        "@types/supertest": "^2.0.3",
        "chai": "^4.1.2",
        "copy": "^0.3.1",
        "copy-webpack-plugin": "^4.2.0",
        "ethereumjs-testrpc": "^4.1.3",
        "file-loader": "^1.1.5",
        "mocha": "^4.0.1",
        "nodemon-webpack-plugin": "^0.1.5",
        "nyc": "^11.3.0",
        "rimraf": "^2.6.2",
        "sinon": "^4.1.0",
        "sinon-chai": "^2.14.0",
        "source-map-support": "^0.5.0",
        "supertest": "^3.0.0",
        "ts-loader": "^3.0.5",
        "ts-node": "^3.3.0",
        "tslint": "^5.8.0",
        "tslint-loader": "^3.5.3",
        "typescript": "^2.5.3",
        "web3-typescript-typings": "^0.7.1",
        "webpack": "^3.8.1",
        "webpack-node-externals": "^1.6.0"
    },
    "dependencies": {
        "0x.js": "^0.22.4",
        "bignumber.js": "^4.1.0",
        "body-parser": "^1.18.2",
        "config": "^1.27.0",
        "cors": "^2.8.4",
        "debug": "^3.1.0",
        "express": "^4.16.2",
        "express-ping": "^1.4.0",
        "inversify": "^4.3.0",
        "inversify-binding-decorators": "^3.0.0",
        "lodash": "^4.17.4",
        "moment": "^2.19.1",
        "reflect-metadata": "^0.1.10",
        "supports-color": "^5.0.0",
        "swagger-ui-express": "^2.0.8",
        "tsoa": "^2.0.1",
        "web3": "^1.0.0-beta.24"
    },
    "nyc": {
        "extension": [
            ".ts"
        ],
        "exclude": [
            "**/*.d.ts",
            "**/dist/**",
            "**/coverage/**",
            "webpack.*.config.js"
        ],
        "reporter": [
            "text"
        ],
        "all": true
    }
}