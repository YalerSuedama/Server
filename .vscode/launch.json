    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug MOCHA",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "--require",
                "ts-node/register",
                "${workspaceRoot}/test/server/orderController.test.ts"
            ],
            "runtimeExecutable": null,
            "sourceMaps": true,
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false
        },
        {
            "type": "node",
            "request": "attach",
            "port": 5858,
            "restart": true,
            "name": "DEBUG",
            "localRoot": "${workspaceRoot}/src",
            "cwd": "${workspaceRoot}",
            "outFiles": [
                "${workspaceRoot}/dist/server.js"
            ],
            "sourceMaps": true,
            "protocol": "inspector"
        }
    ]
}